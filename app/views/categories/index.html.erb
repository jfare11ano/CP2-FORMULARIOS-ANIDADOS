<p id="notice"><%= notice %></p>

<h1>Categories</h1>

<table class="table table-dark">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= link_to category.name, category, id: 'valores' %></td>
        <td><%= category.products.count %></td>
        <td><%= link_to 'Edit', edit_category_path(category), id: 'valores' %></td>
        <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, id: 'valores' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
